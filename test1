#include <Adafruit_DotStar.h>
#include <SPI.h>

// There is only one pixel on the board
#define NUMPIXELS 17 

//Use these pin definitions for the ItsyBitsy M4
#define DATAPIN    5
#define CLOCKPIN   7
 
Adafruit_DotStar strip(NUMPIXELS, DATAPIN, CLOCKPIN, DOTSTAR_GBR);

void setup() {
  strip.begin(); // Initialize pins for output
  // strip.setBrightness(80);
  strip.show();  // Turn all LEDs off ASAP
}

void loop() {

for (int i = 0; i <= 17; i++) {
  for (int b = 1; b <= 17; b++) {
  strip.setPixelColor(i, 0, 255, 0);
  strip.setPixelColor(b, 0, 255, 0);
  strip.show();
  strip.show();
  strip.setPixelColor(i, 102,7,7);
  strip.setPixelColor(b, 102,7,7);
  strip.show();
  strip.show();
  delay(150);
  delay(150);
  strip.setPixelColor(i, 0, 0, 0);
  strip.setPixelColor(b, 0, 0, 0);
  strip.show();
  delay(500);
  }
/*  for (int b = 1; b <= 17; b++) {
  strip.setPixelColor(b, 0, 255, 0);
  strip.show();
  strip.setPixelColor(b, 102,7,7);
  strip.show();
  delay(150);
  strip.setPixelColor(b, 0, 0, 0);
  strip.setPixelColor(b, 0, 0, 0);
  strip.show();
  delay(500);
  }
*/
}
